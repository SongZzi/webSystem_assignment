extends layout

block content
  form(action="http://localhost:3000/" method="GET")
  //영화 정보 리스트 출력
  h1 Movies
  .show
    ul
    each mv in movie
      li
        img(id="img" src=`${mv.url}`)
        p #{mv.title} / #{mv.year}
        br
  hr
  h1 Trending Movies
  .show
    ul
    each mv in pmovie
      li
        img(id="img" src=`${mv.url}`)
        p #{mv.title} / #{mv.year}
        br
 

